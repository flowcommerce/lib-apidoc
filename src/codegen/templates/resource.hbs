import Client from '{{clientImportPath}}/client';

export default class {{resourceClassName this}} extends Client {
  constructor(opts) {
    let options = opts;
    if (typeof opts === 'string') {
      options = { host: opts }; // convert host string to options object
    }
    options.serviceName = '{{serviceName}}';
    super(options);
  }

  {{#operations}}
  {{operationName this ../path}}({{{parameterList this}}}) {
    {{#nonGetMethod this}}
    Object.assign(options, { method: '{{../method}}' });
    {{/nonGetMethod}}
    return this.makeRequest(`${this.host}{{operationPath this}}`, options);
  }

  {{/operations}}
}
